{
    "version": 2,
    "name": "KrakenD api gateway",
    "port": 8080,
    "endpoints": [
        {
          
          "endpoint": "api/third-party/account/{id}",
	      "querystring_params": ["*"],
          "output_encoding": "no-op",
          "backend": [
            {
              "host": [ "http://ms-thirdparty:5000" ],
              "url_pattern": "/api/third-party/account/{id}",
              "encoding": "no-op",
              "extra_config": {
                "github.com/devopsfaith/krakend/http": {
                  "return_error_details": "backend_alias"
                }
              }
            }
          ],
          "headers_to_pass":[
            "*"
          ]
        },
        {
          "endpoint": "api/third-party/swagger",
          "output_encoding": "no-op",
          "querystring_params": ["*"],
          "backend": [
            {
              "encoding": "no-op",
              "host": [ "http://ms-thirdparty:5000" ],
              "url_pattern": "/swagger/index.html"
            }
          ]
        }
    ]
}
