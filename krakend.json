{
    "version": 2,
    "name": "KrakenD api gateway to third-party",
    "port": 8080,
    "endpoints": [
        {
          "endpoint": "api/third-party/account/{id}",
	      "output_encoding": "no-op",
          "headers_to_pass": [
            "*"
          ],
          "backend": [
            {
              "host": [ "localhost:8080" ],
              "url_pattern": "/__debug/login",
              "encoding": "no-op"
            }
          ]
        },
        {
          "endpoint": "api/third-party/swagger",
          "output_encoding": "no-op",
          "querystring_params": ["*"],
          "backend": [
            {
              "encoding": "no-op",
              "host": [ "http://ms-thirdparty:5000" ],
              "url_pattern": "/swagger/index.html"
            }
          ]
        }
    ]
}